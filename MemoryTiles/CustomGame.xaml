<Window x:Class="MemoryTiles.CustomGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryTiles"
        mc:Ignorable="d"
        Title="CustomGame" Height="450" Width="800">
    <Grid>
        <Label Content="Number of rows" HorizontalAlignment="Left" Margin="178,159,0,0" VerticalAlignment="Top" Height="27" Width="98"/>
        <Label Content="Number of columns" HorizontalAlignment="Left" Margin="178,199,0,0" VerticalAlignment="Top" Height="27" Width="121"/>
        <TextBox x:Name="rowsBox" HorizontalAlignment="Left" Height="27" Margin="303,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"/>
        <TextBox x:Name="columnsBox" HorizontalAlignment="Left" Height="27" Margin="303,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"/>
        <Button x:Name="playCustom" Content="Play" HorizontalAlignment="Left" Height="30" Margin="331,279,0,0" VerticalAlignment="Top" Width="104" Click="playCustom_Click"/>
        <Label x:Name="warningBox" Content="" HorizontalAlignment="Left" Height="43" Margin="303,231,0,0" VerticalAlignment="Top" Width="360"/>

    </Grid>
</Window>
